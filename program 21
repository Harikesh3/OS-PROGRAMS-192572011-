#include <stdio.h>
int main() {
    int blockSize[10], processSize[10], blockNo[10], m, n, i, j, max;
    printf("Enter number of blocks: ");
    scanf("%d", &m);
    printf("Enter block sizes:\n");
    for(i=0;i<m;i++){
        scanf("%d",&blockSize[i]);
    printf("Enter number of processes: ");
    scanf("%d",&n);
    printf("Enter process sizes:\n");
    }
    for(i=0;i<n;i++){
        scanf("%d",&processSize[i]);
    }
    for(i=0;i<n;i++) {
        max = -1;
        for(j=0;j<m;j++)
            if(blockSize[j] >= processSize[i])
                if(max == -1 || blockSize[j] > blockSize[max])
                    max = j;
        if(max != -1) {
            blockNo[i] = max;
            blockSize[max] -= processSize[i];
        } else
            blockNo[i] = -1;
    }
    printf("\nProcess\tSize\tBlock\n");
    for(i=0;i<n;i++){
        if(blockNo[i] != -1)
            printf("%d\t%d\t%d\n", i+1, processSize[i], blockNo[i]+1);
        else
            printf("%d\t%d\tNot Allocated\n", i+1, processSize[i]);
    }
}
