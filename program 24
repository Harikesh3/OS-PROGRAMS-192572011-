#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
int main() {
    int fd;
    char writeData[] = "Hello UNIX System Calls\n";
    char readData[50];
    int n;
    fd = open("sample.txt", O_CREAT | O_RDWR, 0644);
    write(fd, writeData, sizeof(writeData));
    lseek(fd, 0, SEEK_SET);
    n = read(fd, readData, sizeof(readData));
    write(1, readData, n);
    close(fd);
    return 0;
}
