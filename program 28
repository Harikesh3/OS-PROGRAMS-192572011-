#include <stdio.h>
#include <string.h>
int main() {
    FILE *fp;
    char line[100];
    char pattern[50];
    printf("Enter pattern to search: ");
    scanf("%s", pattern);
    fp = fopen("file.txt", "r");
    if(fp == NULL) {
        printf("Cannot open file\n");
        return 1;
    }
    while(fgets(line, sizeof(line), fp) != NULL) {
        if(strstr(line, pattern) != NULL)
            printf("%s", line);
    }
    fclose(fp);
    return 0;
}
