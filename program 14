#include <stdio.h>
#include <stdlib.h>
#include <fcntl.h>
#include <unistd.h>
#define BUFFER_SIZE 4096
void copy() {
    const char *sourcefile = "C:/Users/Hari/OneDrive/Desktop/test1.txt";
    const char *destination_file = "C:/Users/Hari/OneDrive/Desktop/t1.txt";
    int source_fd = open(sourcefile, O_RDONLY);
    if (source_fd == -1) {
        perror("Source file open error");
        return;
    }
    int dest_fd = open(destination_file, O_WRONLY | O_CREAT | O_TRUNC, 0666);
    if (dest_fd == -1) {
        perror("Destination file open error");
        close(source_fd);
        return;
    }
    char buffer[BUFFER_SIZE];
    ssize_t bytesRead, bytesWritten;

    while ((bytesRead = read(source_fd, buffer, BUFFER_SIZE)) > 0) {
        bytesWritten = write(dest_fd, buffer, bytesRead);
        if (bytesWritten != bytesRead) {
            perror("Write error");
            break;
        }
    }
    close(source_fd);
    close(dest_fd);
    printf("File copied successfully.\n");
}

void create() {
    FILE *fp = fopen("C:/Users/Hari/OneDrive/Desktop/test1.txt", "w");
    if (fp == NULL) {
        perror("File creation failed");
        return;
    }
    fclose(fp);
    printf("File created successfully.\n");
}
void delete_file() {
    if (remove("C:/Users/Hari/OneDrive/Desktop/test1.txt") == 0) {
        printf("File deleted successfully.\n");
    } else {
        perror("File deletion failed");
    }
}
int main() {
    int n;
    printf("1. Create \t2. Copy \t3. Delete\nEnter your choice: ");
    scanf("%d", &n);
    switch (n) {
        case 1:
            create();
            break;
        case 2:
            copy();
            break;
        case 3:
            delete_file();
            break;
        default:
            printf("Invalid choice.\n");
            break;
    }
    return 0;
}
